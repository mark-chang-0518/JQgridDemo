                <!-- <ul class="navbar-nav"> -->
                <ul class="navbar-nav mr-auto">
                    @*<li class="nav-item active">
                            <a class="nav-link" href="#">首頁 <span class="sr-only">(current)</span></a>
                        </li>*@
                    <li class="nav-item">
                        <!-- 使用 Id 與  data-toggle="modal" 來和 Model 互動 -->
                        @* <a class="nav-link" href="#exampleModalLong" data-toggle="modal" data-backdrop="static">登入</a>*@
                    </li>
                    <li class="nav-item dropdown">
                        <!-- Id 對應下面 aria-labelledby -->
                        @*<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>*@
                        @*<div class="dropdown-menu dropright" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#exampleModalLong2" data-toggle="modal">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
