                    <a href="@Url.Action("Login", "Account", null)" class="card-link">基本用法</a>
                </div>*@
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    實際資料載入方式
                                </button>
                            </h5>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                            <div class="list-group list-group-flush">
                                <div>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid6", "JQgrid", null)">Ajax Data (1)</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid7", "JQgrid", null)">Ajax Data (2)</a>
                                </div>
                            </div>
                            @*<div class="card-body">
                    Ajax Data
                </div>*@
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingThree">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    補充應用
                                </button>
                            </h5>
                        </div>
                        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                            <div class="list-group list-group-flush">
                                <div>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid8", "JQgrid", null)">補充應用 (1)</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid9", "JQgrid", null)">補充應用 (2)</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid10", "JQgrid", null)">補充應用 (3)</a>
                                </div>
                            </div>
                            @*<div class="card-body">
                                補充應用
                            </div>*@
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingFour">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    HOMEWORK
                                </button>
                            </h5>
                        </div>
                        <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordion">
                            <div class="list-group list-group-flush">
                                <div>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid11", "JQgrid", null)">作業</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-9">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryjqgrid")
    <script type="text/javascript">
        $(function () {
            $('.navbar.fixed-top').after(
                '<div class="space" style="height:'
                +
                ($('.navbar.fixed-top').outerHeight(true) + 5)
                +
                'px"></div>'
            );
        })
    </script>
</body>
</html>
