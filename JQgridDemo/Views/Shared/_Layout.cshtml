                                    <a class="dropdown-item" href="#">Action2</a>
                                    <a class="dropdown-item" href="#">Another action2</a>
                                </div>
                            </div>*@
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link disabled" href="#">Disabled</a>*@
                    </li>
                </ul>
                <!-- 選單清單 -->
                <!-- Search 區塊 -->
                <!-- <form class="form-inline my-2 ml-auto my-lg-0"> -->
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                </form>
                <!-- Search 區塊 -->
            </div>
        </nav>
        <div class="row">
            <div class="col-12 col-sm-3">
                <div id="accordion">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    基本應用
                                </button>
                            </h5>
                        </div>
                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="list-group list-group-flush">
                                <div>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid1", "JQgrid", null)">JsonData</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid2", "JQgrid", null)">Get Methods</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid3", "JQgrid", null)">Set-Method (1)</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid4", "JQgrid", null)">Set-Method (2)</a>
                                    <a class="list-group-item list-group-item-action" href="@Url.Action("JQgrid5", "JQgrid", null)">Set-Method (3)</a>
                                </div>
                            </div>
